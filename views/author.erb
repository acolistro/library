
<h4>Author Name: <%= @author.name %></h4>
<h4>Author Bio: <%= @author.bio %></h4>



<h3>Book Authors</h3>

<% if @author.books %>
<ul>
  <% @author.books.each do |book| %>
  <li><a href="/books/<%= book.id %>"> <%= book.name %> </a></li>
  <% end %>
</ul>
<% else %>
<p>There are no books listed for this author yet.</p>
<% end %>

<p><a href="/authors/<%= @author.id %>/edit">Edit author</a></p>
<a href="/authors">Return to Book List</a>
